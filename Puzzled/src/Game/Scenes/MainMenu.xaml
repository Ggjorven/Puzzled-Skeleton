<UserControl x:Class="Puzzled.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>
            
            <!-- Press Any Key-->
            <Label x:Name="PressAnyKey"
                Content="Press Any Key"
                
                Background="Transparent"
                Foreground="Transparent" Margin="251,536,251,134" FontSize="32" FontFamily="Courier New"
            />
        </Grid>
    </Grid>
</UserControl>
