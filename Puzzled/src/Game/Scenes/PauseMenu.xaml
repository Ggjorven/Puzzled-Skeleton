<UserControl x:Class="Puzzled.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>

            <!-- Win text -->
            <TextBlock Text="Game Paused"
                FontSize="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="White"
                Margin="0,64,0,0" />
        </Grid>
    </Grid>
</UserControl>
