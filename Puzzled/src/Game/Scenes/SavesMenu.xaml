<UserControl x:Class="Puzzled.SavesMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>

            <!-- Save slots text -->
            <TextBlock Text="Choose a Save slot"
                FontSize="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="White"
                Margin="0,64,0,0" />

            <!-- Save slot buttons -->
            <Button x:Name="SaveSlot1" Width="549" Height="127"
                Content=" Slot #1&#x0a;Score: 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="SaveSlot1Pressed" Margin="0,233,0,0"/>
            <Button x:Name="SaveSlot2" Width="549" Height="127"
                Content=" Slot #2&#x0a;Score: 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="SaveSlot2Pressed" Margin="0,380,0,0"/>
            <Button x:Name="SaveSlot3" Width="548" Height="127"
                Content=" Slot #3&#x0a;Score: 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="SaveSlot3Pressed" Margin="0,531,0,0"/>
        </Grid>
    </Grid>
</UserControl>
