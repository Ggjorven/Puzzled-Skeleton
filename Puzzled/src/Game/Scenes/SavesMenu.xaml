<UserControl x:Class="Puzzled.SavesMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>

            <!-- Save slot buttons -->
            <Button x:Name="SaveSlot1" Width="650" Height="150"
                Content="Save Slot 1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="SaveSlot1Pressed" Margin="0,195,0,0"/>
            <Button x:Name="SaveSlot2" Width="650" Height="150"
                Content="Save Slot 2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="SaveSlot2Pressed" Margin="0,397,0,0"/>
            <Button x:Name="SaveSlot3" Width="650" Height="150"
                Content="Save Slot 3"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="SaveSlot3Pressed" Margin="0,601,0,0"/>
        </Grid>
    </Grid>
</UserControl>
